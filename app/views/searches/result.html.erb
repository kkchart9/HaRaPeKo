<% require 'json' %>
<h1 class="title title-response">
  検索結果
</h1>
<div class="content col-9 response">
  <div class="res-field">
  </div>
  <section id="pager"></section>
</div>

<script>
  let shops = [
      <% @response["results"]["shop"].each do |res| %>
      {
          shop_name: '<%= res["name"] %>',
          access: '<%= res["access"] %>',
          logo_img: '<%= res["logo_image"] %>'
      },
      <% end %>
  ]

  $(function () {
      $('#pager').pagination({
          dataSource: shops,
          pageSize: 9,
          prevText: '&lt; 前へ',
          nextText: '次へ &gt;',
          callback: function(data, pagination) {
              $('.res-field').html(template(data));
          }
      })
  })

  function template(dataArray) {
      return dataArray.map(function(data) {
          return '<div class="shop-field col-4"><div class="row"><div class="col-md shop"><h5>' + data.shop_name + '</h5><div class="shops-detail"><img class="logo-img" scr="' + data.logo_img + '"><p>' + data.access + '</p></div></div></div></div>'
      })
  }
</script>

<%#= paginate @response %>
